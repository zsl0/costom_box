<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>zsl_custom_box</artifactId>
        <groupId>com.zsl.custombox</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>authentication</artifactId>
    <description>认证颁发Token令牌并实现第三方登录（手机号、邮箱、QQ、微信）</description>
    <name>authentication</name>

    <properties>
        <jdk.version>11</jdk.version>
        <org.mapstruct.version>1.4.2.Final</org.mapstruct.version>
    </properties>

    <dependencies>
<!--        common组件-->
        <dependency>
            <groupId>com.zsl.custombox</groupId>
            <artifactId>zsl-common</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

<!--        log(AccessLog、OperationLog)组件-->
        <dependency>
            <groupId>com.zsl.custombox</groupId>
            <artifactId>zsl-spring-boot-starter-log</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

<!--        认证组件-->
        <dependency>
            <groupId>com.zsl.custombox</groupId>
            <artifactId>zsl-spring-boot-starter-security-auth</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

<!--        API文档组件-->
        <dependency>
            <groupId>com.zsl.custombox</groupId>
            <artifactId>zsl-spring-boot-starter-swagger</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

<!--        JWT-->
        <dependency>
            <groupId>com.auth0</groupId>
            <artifactId>java-jwt</artifactId>
        </dependency>
<!--        mail-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-mail</artifactId>
        </dependency>
<!--        freemarker-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-freemarker</artifactId>
        </dependency>
<!--        redis-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-redis</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${jdk.version}</source> <!-- depending on your project -->
                    <target>${jdk.version}</target> <!-- depending on your project -->
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${org.mapstruct.version}</version>
                        </path>
                        <!-- other annotation processors -->
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>